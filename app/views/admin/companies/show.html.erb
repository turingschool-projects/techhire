<div class="well">
  <%= render 'company_profile' %><hr/>
</div>

<div class="row text-center">
  <div class="col-sm-4">
    <%= form_for @company, url: admin_company_path do |f| %>
      <%= f.select(:status, Company::STATUS_OPTIONS) %>
      <%= f.submit "Update Status", class: "btn btn-default" %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= button_to admin_company_path(@company.id), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this company? This action cannot be undone.'} do %>
      <span class="glyphicon glyphicon-remove"></span> Delete Company
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= button_to edit_admin_company_path(@company.id), method: :get, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-edit"></span> Edit Company
    <% end %>
  </div>
</div><hr/>

<div class="well add_note">
  <h4>Add a Note:</h4>
  <%= form_tag admin_company_notes_path(company_id: @company.id), method: :post do %>
    <form role="form">
      <div class="form-group">
        <textarea name="note" id="note" class="form-control" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Add Note</button>
    </form>
  <% end %>
</div>

<div class="notes">
  <% @company.notes.order('updated_at DESC').each do |note| %>
    <div class="media">
      <a class="pull-left" href="#">
        <img class="media-object" src="http://placehold.it/64x64" alt="">
      </a>
      <div class="media-body">
        <h4 class="media-heading"><%= @company.organization %>
        <small><%= note.created_at %></small>
        </h4>
        <%= note.body %>
      </div>
    </div>
  <% end %>
</div>
<hr/>

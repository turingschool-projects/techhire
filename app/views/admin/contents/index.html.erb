<div class="row">
  <%= form_for(:content, url:admin_contents_path, html: { class: "form-horizontal"} ) do |f| %>
    <h1>Create New Content </h1><br/>
    <div class="form-group">
      <%= f.label :title, "Title", class: "col-sm-2 control-label" %>
      <%= f.text_area :title, placeholder: "Enter Descriptive Title", class: "col-sm-5" %>
    </div>
    <div class="form-group">
      <%= f.label :body, "Add New Content", class: "col-sm-2 control-label" %>
      <%= f.text_area :body, rows: 10, placeholder: "Write Descriptive Content For Site", class: "col-sm-8" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary col-sm-2 col-sm-offset-5" %>
  <% end %>
</div><br/>

<div class="row">
  <table class="table">
    <thead>
      <tr class="warning">
        <th data-field='title'>Title</th>
        <th data-field='body'>Body</th>
        <th data-field="Updated-time"> Updated Time</th>
        <th data-field="Edit/Delete">Edit/Delete/View</th>
      </tr>
    </thead>

    <tbody>
    <% @contents.each do |content| %>
      <tr id="table-row" data-title= "<%= content.title %>">
        <td><%= content.title %></td>
        <td><%= truncate(content.body, length: 17, separator: ' ') %></td>
        <td><%= distance_of_time_in_words(content.updated_at, Time.now)%> ago</td>
        <td>
          <%= link_to "Edit", edit_admin_content_path(content), class: "btn btn-primary" %>
          <button class="btn btn-danger deleteBtn" data-id="<%=content.id%>" data-toggle="modal" data-target="#confirm-delete">Delete</button>
          <%= link_to "View", admin_content_path(content), class: "btn btn-primary" %>
        </td>
      </tr>
      <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">Are you sure you want to Delete this content?</div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <a class="btn btn-danger btn-delete" rel="nofollow" id="contentID" data-method="delete" href="">Delete</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </tbody>
  </table>
</div>

